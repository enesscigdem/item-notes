<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ItemNotes.UI.Converters"
             x:Class="ItemNotes.UI.App">
    <Application.Styles>
        <!-- Light Fluent theme for a clean, professional look -->
        <FluentTheme Mode="Light" />
    </Application.Styles>
    <Application.Resources>
        <!-- Global converters -->
        <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
        <converters:NoteColorToBrushConverter x:Key="NoteColorToBrushConverter" />
    </Application.Resources>
</Application>