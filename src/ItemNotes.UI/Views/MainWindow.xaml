<Window
    x:Class="ItemNotes.UI.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="900" Height="600"
    Title="Item Notes"
    WindowStartupLocation="CenterScreen">

    <Border Padding="12">
        <Grid RowDefinitions="Auto,*">
            <StackPanel Orientation="Horizontal" Spacing="6">
                <!-- Komut + Click fallback -->
                <Button x:Name="BtnOpen"
                        Content="Seçileni Aç"
                        Command="{Binding OpenSelectedCommand}"
                        Click="OnOpenSelectedClick"/>
                <Button x:Name="BtnNew"
                        Content="Yeni Not"
                        Command="{Binding NewNoteCommand}"
                        Click="OnNewNoteClick"/>
            </StackPanel>

            <!-- Not listesi -->
            <ListBox Grid.Row="1"
                     ItemsSource="{Binding Notes}"
                     SelectedItem="{Binding SelectedNote, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding CreatedBy}" Opacity="0.7"/>
                            <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Opacity="0.7"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</Window>