<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:ItemNotes.UI.ViewModels"
    xmlns:conv="clr-namespace:ItemNotes.UI.Converters"
    x:Class="ItemNotes.UI.Views.MainWindow"
    Title="Item Notes"
    Width="800" Height="600"
    Background="#F9F9F9">

    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left" Spacing="5">
            <Button Content="Yeni Not" Command="{Binding CreateNoteCommand}" />
            <Button Content="Seçileni Aç" Command="{Binding OpenNoteCommand}" />
            <Button Content="Seçileni Sil" Command="{Binding DeleteNoteCommand}" />
        </StackPanel>

        <!-- Note list with light background -->
        <Border Background="White" CornerRadius="6" Margin="0,10,0,0" Padding="10">
            <ListBox ItemsSource="{Binding Notes}" SelectedItem="{Binding SelectedNote}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                            <Ellipse Width="16" Height="16" Fill="{Binding Color, Converter={StaticResource NoteColorToBrushConverter}}" />
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" />
                                <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" FontSize="10" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </DockPanel>
</Window>