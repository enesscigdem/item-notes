<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ItemNotes.UI.Converters"
    xmlns:avRichTextBox="clr-namespace:AvRichTextBox;assembly=AvRichTextBox"
    x:Class="ItemNotes.UI.Views.NoteWindow"
    Title="{Binding Note.Title}"
    Width="820"
    Height="600"
    RequestedThemeVariant="Light"
    SystemDecorations="None"
    WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <conv:NoteColorToBrushConverter x:Key="NoteColorToBrushConverter"/>
    </Window.Resources>

    <!-- Ana kapsayıcı (arka planı not rengi) -->
    <Border x:Name="RootBorder"
            Background="{Binding Note.Color, Converter={StaticResource NoteColorToBrushConverter}}"
            CornerRadius="16"
            Padding="0"
            BorderThickness="2"
            BorderBrush="#2A000000">

        <DockPanel>

            <!-- Üst başlık+menü (yarı şeffaf panel hissi) -->
            <Border DockPanel.Dock="Top" Background="#19FFFFFF" Padding="6,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Menu>
                        <MenuItem Header="_Dosya">
                            <MenuItem Header="_Yeni Sayfa" Command="{Binding AddPageCommand}"/>
                            <Separator/>
                            <MenuItem Header="_Kapat" Click="OnCloseClick"/>
                        </MenuItem>

                        <MenuItem Header="_Düzen">
                            <MenuItem Header="_Kalın"       Command="{Binding BoldCommand}"/>
                            <MenuItem Header="_İtalik"      Command="{Binding ItalicCommand}"/>
                            <MenuItem Header="_Altı Çizili" Command="{Binding UnderlineCommand}"/>
                            <MenuItem Header="_Üstü Çizili" Command="{Binding StrikethroughCommand}"/>
                            <MenuItem Header="_Madde İşareti" Command="{Binding BulletListCommand}"/>
                            <MenuItem Header="_Bağlantı"    Command="{Binding InsertLinkCommand}"/>
                        </MenuItem>

                        <MenuItem Header="_Ekle">
                            <MenuItem Header="_Resim…" Command="{Binding InsertImageCommand}"/>
                            <MenuItem Header="_Tablo"   Command="{Binding InsertTableCommand}"/>
                            <MenuItem Header="_Sembol"  Command="{Binding InsertSymbolCommand}"/>
                        </MenuItem>

                        <MenuItem Header="_Renk">
                            <MenuItem Header="Sarı"   Click="ChangeColorYellow"/>
                            <MenuItem Header="Yeşil"  Click="ChangeColorGreen"/>
                            <MenuItem Header="Kırmızı" Click="ChangeColorRed"/>
                        </MenuItem>
                    </Menu>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="8" Margin="8,0,4,0">
                        <TextBlock Text="{Binding Note.CreatedBy}" Foreground="Black" />
                        <TextBlock Text="·" Foreground="Black" />
                        <TextBlock Text="{Binding Note.CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Foreground="Black"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- İçerik sekmeleri -->
            <TabControl ItemsSource="{Binding Pages}" SelectedItem="{Binding SelectedPage}" Margin="8,6,8,10">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Header}" Foreground="Black"/>
                    </DataTemplate>
                </TabControl.ItemTemplate>

                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <Border Background="#FFFFFF" CornerRadius="12" Padding="12">
                            <avRichTextBox:RichTextBox
                                FlowDocument="{Binding Document}"
                                IsReadOnly="{Binding IsReadOnly}"
                                Background="Transparent"
                                Foreground="Black"/>
                        </Border>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>

        </DockPanel>
    </Border>
</Window>
