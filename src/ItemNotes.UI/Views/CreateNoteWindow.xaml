<Window
    x:Class="ItemNotes.UI.Views.CreateNoteWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="520" Height="320"
    Title="Yeni Not"
    WindowStartupLocation="CenterOwner">

    <!-- Grid'e Padding verilemediği için Border ile sarıyoruz -->
    <Border Padding="14">
        <Grid RowDefinitions="Auto,*">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Oluştur" Command="{Binding CreateCommand}" />
                <Button Content="İptal"   Command="{Binding CancelCommand}" />
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,12,0,0" Spacing="10">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Başlık" Width="80" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Title, Mode=TwoWay}" Width="360"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Renk" Width="80" VerticalAlignment="Center"/>
                    <!-- Items -> ItemsSource düzeltildi -->
                    <ComboBox ItemsSource="{Binding Colors}"
                              SelectedItem="{Binding SelectedColor, Mode=TwoWay}"
                              Width="180"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Oluşturan" Width="80" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding CreatedBy, Mode=TwoWay}" Width="240"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>