<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ItemNotes.UI.Converters"
    x:Class="ItemNotes.UI.Views.CreateNoteWindow"
    Title="Yeni Not"
    Width="380"
    Height="260"
    RequestedThemeVariant="Light"
    WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <conv:NoteColorToTextConverter x:Key="NoteColorToTextConverter"/>
    </Window.Resources>

    <Border CornerRadius="14" Padding="18" Background="#FFFDF9"
            BorderThickness="2" BorderBrush="#2A000000">
        <StackPanel Spacing="10">
            <TextBlock Text="Başlık" Foreground="Black" />
            <TextBox Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Background="#FFFFFF" Foreground="Black" Watermark="Örn: Toplantı notu"/>

            <TextBlock Text="Renk" Margin="0,6,0,0" Foreground="Black"/>
            <ComboBox ItemsSource="{Binding Colors}" SelectedItem="{Binding SelectedColor, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ., Converter={StaticResource NoteColorToTextConverter}}"
                                   Foreground="Black"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Oluşturan" Margin="0,6,0,0" Foreground="Black"/>
            <TextBox Text="{Binding CreatedBy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Background="#F2F2F2" Foreground="Black"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0" Spacing="10">
                <Button Content="İptal"   Command="{Binding CancelCommand}"/>
                <Button Content="Oluştur" Command="{Binding CreateCommand}" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>