<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ItemNotes.UI.Converters"
    x:Class="ItemNotes.UI.Views.CreateNoteWindow"
    Title="Yeni Not"
    Width="350"
    Height="230"
    RequestedThemeVariant="Light"
    WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <conv:NoteColorToTextConverter x:Key="NoteColorToTextConverter"/>
    </Window.Resources>

    <!-- Yumuşak kenarlı, açık renkli panel -->
    <Border CornerRadius="10"
            Padding="14"
            Background="#FFFDF9">
        <StackPanel Spacing="8">
            <TextBlock Text="Başlık:" Foreground="Black"/>
            <TextBox Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Background="#FFFFFF"
                     Foreground="Black"/>

            <TextBlock Text="Renk:" Margin="0,6,0,0" Foreground="Black"/>
            <ComboBox ItemsSource="{Binding Colors}"
                      SelectedItem="{Binding SelectedColor, Mode=TwoWay}"
                      Background="#FFFFFF">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ., Converter={StaticResource NoteColorToTextConverter}}"
                                   Foreground="Black"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Oluşturan:" Margin="0,6,0,0" Foreground="Black"/>
            <TextBox Text="{Binding CreatedBy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Background="#EFEFEF"
                     Foreground="Black"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,12,0,0"
                        Spacing="10">
                <Button Content="İptal"   Command="{Binding CancelCommand}"/>
                <Button Content="Oluştur" Command="{Binding CreateCommand}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
