<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:ItemNotes.UI.ViewModels"
    xmlns:conv="clr-namespace:ItemNotes.UI.Converters"
    x:Class="ItemNotes.UI.Views.CreateNoteWindow"
    Title="Yeni Not"
    Width="350"
    Height="230"
    WindowStartupLocation="CenterOwner"
    Background="#FFFDF9">

    <Window.Resources>
        <conv:NoteColorToTextConverter x:Key="NoteColorToTextConverter" />
    </Window.Resources>

    <!-- Kart şeklinde, yuvarlatılmış panel -->
    <Border CornerRadius="10" Padding="14">
        <StackPanel Spacing="8">
            <TextBlock Text="Başlık:"/>
            <TextBox Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Renk:" Margin="0,6,0,0"/>
            <ComboBox ItemsSource="{Binding Colors}" SelectedItem="{Binding SelectedColor, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ., Converter={StaticResource NoteColorToTextConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Oluşturan:" Margin="0,6,0,0"/>
            <TextBox Text="{Binding CreatedBy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0" Spacing="10">
                <Button Content="İptal"   Command="{Binding CancelCommand}" />
                <Button Content="Oluştur" Command="{Binding CreateCommand}" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>